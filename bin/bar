#!/bin/fish

set config $HOME/.config/eww/bar

function spawn
  killall -q eww
  eww daemon
  set pid (pgrep eww)
  if test -n "$pid"
    # GTK_DEBUG=interactive eww --config "$config" --debug open bar --screen 0
    eww --config "$config" --debug open bar --screen 0
  end
end

function toggle
  set bar eww --config ~/.config/eww/bar
  set opened ($bar windows | grep "*bar")

  if test -n "$opened"
    $bar close bar
  else
    $bar open bar
  end
end

switch $argv[1]
  case spawn
    spawn
  case toggle
    toggle
end
