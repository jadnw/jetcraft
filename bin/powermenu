#!/bin/fish

set theme ~/.config/rofi/power.rasi
set uptime (uptime -p | sed -e 's/up //g')

function toggle
  killall -q rofi

  # options
  set logout ""
  set lock ""
  set suspend ""
  set reboot ""
  set shutdown ""

  # variables passed to dmenu
  set options "$logout\n$lock\n$suspend\n$reboot\n$shutdown"

  set opt (echo -e $options | rofi -dmenu -p "Uptime: $uptime" -theme $theme)

  if test -z $opt
    exit 0
  end

  switch $opt
    case $shutdown
      poweroff
    case $reboot
      reboot
    case $logout
      swaymsg exit
    case $lock
      swaylock
    case $suspend
      systemctl suspend
  end
end

switch $argv[1]
  case ''
    toggle
end
